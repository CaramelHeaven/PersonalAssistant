<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_tasks_for_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Задачи на вас" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_tasks_to_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_tasks_for_user"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_tasks_from_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_tasks_to_user"
                android:text="Задачи от вас" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_tasks_from_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_tasks_from_user"
                android:layout_marginTop="8dp" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add" />
</android.support.design.widget.CoordinatorLayout>